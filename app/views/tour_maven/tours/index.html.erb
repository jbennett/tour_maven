<div class="flex justify-between gap-x-4">
  <h1 class="text-3xl font-bold tracking-wide mb-4">Tours</h1>

  <div>
  <%= link_to new_tour_path, class: "inline-flex items-center gap-x-2 rounded-md bg-blue-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" do %>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="-ml-0.5 h-5 w-5">
      <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zM12.75 9a.75.75 0 00-1.5 0v2.25H9a.75.75 0 000 1.5h2.25V15a.75.75 0 001.5 0v-2.25H15a.75.75 0 000-1.5h-2.25V9z" clip-rule="evenodd" />
    </svg>

    Add Tour
  <% end %>
  </div>
</div>

<table class="min-w-full divide-y divide-gray-300">
  <thead>
  <tr>
    <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Tour</th>
    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Page</th>
    <th scope="col" class="py-3.5 pl-3 pr-4 text-left text-sm font-semibold text-gray-900 sm:pr-0">Selector</th>
  </tr>
  </thead>
  <tbody class="divide-y divide-gray-200">
  <% @tours.order(:label).each do |tour| %>
    <tr>
      <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0"><%= link_to tour.label, [:edit, tour], class: "text-blue-600 hover:text-blue-900" %></td>
      <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= tour.page_filter %></td>
      <td class="whitespace-nowrap py-4 pl-3 pr-4 text-sm text-gray-500 font-medium sm:pr-0"><%= tour.content_selector %></td>
    </tr>
  <% end %>
  </tbody>
</table>
