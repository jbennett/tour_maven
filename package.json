{
  "name": "tour_maven",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Jonathan Bennett <jonathan@jbennett.me>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "yarn build:js",
    "xbuild": "yarn build:js && yarn build:css",
    "build:js": "esbuild app/javascript/*.js --bundle --sourcemap --outdir=app/assets/builds",
    "prod:build": "yarn prod:build:js",
    "xprod:build": "yarn prod:build:js && yarn prod:build:css",
    "prod:build:js": "esbuild app/javascript/*.js --bundle --sourcemap --minify --outdir=public/tm-assets",
    "prod:build:css": "tailwindcss -i ./app/assets/stylesheets/avo.base.css -o ./public/tm-assets/avo.base.css --postcss"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "@rails/request.js": "^0.0.8",
    "esbuild": "^0.18.17",
    "tourguidejs": "^1.1.2"
  }
}
