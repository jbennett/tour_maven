{
  "name": "tour_maven",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Jonathan Bennett <jonathan@jbennett.me>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "yarn build:js && yarn build:css",
    "build:js": "esbuild app/javascript/*.js --bundle --sourcemap --minify --outdir=public/tour_maven",
    "build:css": "yarn build:css:application && yarn build:css:admin",
    "build:css:application": "tailwindcss -i ./app/assets/stylesheets/tour_maven/application.css -o ./public/tour_maven/application.css --minify",
    "build:css:admin": "tailwindcss -i ./app/assets/stylesheets/tour_maven/admin.css -o ./public/tour_maven/admin.css --minify"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "@rails/request.js": "^0.0.8",
    "@sjmc11/tourguidejs": "^0.0.10",
    "esbuild": "^0.18.17",
    "tailwindcss": "^3.3.3",
    "@tailwindcss/forms": "^0.5.4"
  }
}
